.footer{
	background-color: #000;
}
footer
	padding-top 130px
	padding-bottom 40px
	display flex
	justify-content space-between

.footer-logo_container
	display flex
	flex-direction column

.footer-logo_descriptor
	text-align center
	color #fff
	opacity 0.8
	font-size 14px



.footer_link
	color #fff
	opacity 0.8
	font-size 14px
	margin-bottom 10px
	font-weight 400
	trans()
.footer_link:hover
	color c-prim
	trans()
.footer-socials-icons
	display flex
	justify-content space-around
	width 300px
.footer-links{
	display flex
	justify-content: space-between;
	flex-basis: 38px;
}
.footer-links-1
	display flex
	flex-direction column
	margin-right 26px
.footer-links-2
	display flex
	flex-direction column

.socials_item
	margin-right 16px
.socials_item:last-child
	margin-right 0

.socials_item-icon:hover
	fill c-prim
	stroke c-prim
	trans()






@media (max-width 480px)
	footer
		flex-direction column
		align-items center
	.footer-logo_container
		margin-bottom 26px
	.footer-links-1
		margin-right 0
	.footer-links
		flex-direction column
		align-items center
		text-align center
		margin-bottom 26px
	
	.footer-socials-icons
		width 100%


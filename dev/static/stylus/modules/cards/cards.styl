.cards-content
	display flex
	justify-content space-between
	flex-wrap wrap
	gap: 26px
	margin-bottom 150px
	padding-top 124px

.card
	position relative
	display flex
	justify-content center
	flex-direction column
	align-items center

	width 31%
	padding 58px 0

	border-radius 24px
	background-color c-surface
	transition all 0.3s ease-in
	cardShade()
	text-align center

	&:hover
		background-color c-prim
		color c-f--on-content
		trans()
.card_title
	font-weight 900
.card_text
	max-width 238px

.big_title
	color c-f
	font-size f-section-title
	font-weight 900
	text-align center
	margin-bottom 80px
	line-height 1.2

.card_img
	position absolute
	top -91px
	left 0
	right 0
	margin 0 auto
	height 91px
	max-height 91px

@media (max-width 480px)
	.card
		width 100%
		margin-bottom 124px


@media (max-width 480px)
	.belarus-content
		justify-content center
	.belarus_cover
	.multitude_cover
		height 130px !important
		border-radius: 0
		padding 0 !important

	.section-title-wrap
		position relative !important 
		width 100%
		max-width 100%
		text-align center
	.belarus_cover
		background-size: 291% !important;
		background-position-x: -185px !important;
		height 260px !important



@media (min-width 1800px)
	.hero{
		background-position-y: -55px;
	}
	.heading-title:before{
		left: 75px
	}
	.section-title-wrap{
		max-width 100%
	}

.belarus
	margin-bottom 144px
	.gdpr
		margin-left auto
		margin-right 200px
.belarus_cover
	width 100vw
	height 480px
	margin-bottom 60px
	background-size 150%
	background-position center center
	background-image url(../img/content/belarus-bg.jpg)
	border-radius 0 0 32px 32px
.belarus-content
	display flex
	justify-content space-between
	flex-wrap wrap
	gap	26px
	margin-bottom 40px


.section-title-wrap
	border-radius: 32px;
	display inline-block
	max-width 500px
	overflow hidden
	padding 30px
	position relative
.section-title
	color #fff !important
	margin-bottom 0 !important

.section-title_blur
	position absolute
	top 0
	left 0
	width 100%
	height 103px
	background: rgba(255, 255, 255, 0.01);
	backdrop-filter: blur(10px);
	border-radius 16px
	z-index -1


.belarus .section-title-wrap{
	position: absolute;
	top: -100px;
}
@media (max-width 480px)
	.belarus-content
		justify-content center
	.belarus_cover
	.multitude_cover
		height 130px !important

@media (min-width 1800px)
	.hero{
		background-position-y: 0;
	}
	.heading-title:before{
		left: 75px
	}

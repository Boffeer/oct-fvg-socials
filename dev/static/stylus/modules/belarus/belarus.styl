.belarus
	margin-bottom 144px
	.gdpr
		margin-left auto
		margin-right 200px
.belarus_cover
	width 100vw
	height 480px
	margin-bottom 60px
	background-size 150%
	background-position center center
	background-image url(../img/content/belarus-bg.jpg)
.belarus-content
	display flex
	justify-content space-between
	flex-wrap wrap
	gap	26px
	margin-bottom 40px


.section-title-wrap
	display inline-block
	overflow hidden
	padding 30px
	position absolute
	top 0
	left 0
	background: rgba(255, 255, 255, 0.01);
	backdrop-filter: blur(5px);
	-webkit-backdrop-filter: blur(5px);
	border-radius 16px

.section-title
	color #fff !important
	margin-bottom 0 !important


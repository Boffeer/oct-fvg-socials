.pop-callback_wrap
	popup()
	display flex
	background-color rgba(#fff, 0.8)
	display none
.pop_title
	text-align center
	font-size 28px
	line-height 1.3
	margin-bottom 26px
.pop-callback
	position relative
	display flex
	flex-direction column
	background-color #fff
	max-width 360px
	padding 50px
	border-radius 26px
	cardShade()



// ===============
// Pricing
// ===============
.pop-pricing_wrap
	popup()
	display none
	height 100%
	background-color rgba(#fff, 0.8)
.pop-pricing
	position relative
	background-color #fff
	border-radius 26px
	cardShade()
	padding 50px
	// overflow auto

.pricing-list
	display flex
	justify-content space-around
	height 300px
	overflow auto
	padding-bottom 26px


.pricing-item_title
	font-weight 900
	font-size 28px
	margin-bottom 16px
.pricing-item_cost
	font-weight 600
	color c-prim

.pricing-item-form
	padding 45px 84px
	cardShade()
	border-radius 24px
	display flex
	justify-content space-between
.pricing-inputs
	width 40%
	display flex
	flex-wrap wrap
	.g-form_input
		width 100%
	.g-btn-prim
		width 100%
.pop-pricing_title
	width 50%
	margin-right 62px
	font-size 24px


@media (max-width 480px)
	.pricing-item:first-child
		padding-left 30px
	.pricing-item-form
		display none
	.pricing-item_feature
		margin-bottom 10px
	.pricing-list
		margin-bottom 68px
	.pop-pricing
		padding 20px
	.pricing-item-form
		margin-top 26px
		padding 20px
		flex-direction column
	.pop-pricing_title
		width 100%
		margin-right 	0
		margin-bottom 26px
		line-height 1.4
		font-size 18px
	.pricing-inputs
		width 100%
		.g-form_input:first-child
			margin-right 0
		.g-form_input
			width 100%

	.pricing-item
		padding-right 20px

	.pricing-order
		margin-bottom 20px
		display block


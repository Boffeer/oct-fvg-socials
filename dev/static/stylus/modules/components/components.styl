.community-wrap
	width 23%
	margin-bottom 22px
.community-card
	position relative
	display flex
	flex-direction column
	// min-width 295px
	// max-width 340px
	// width 24%
	padding-top 26px
	margin-bottom 26px
	background: #FFFFFF;
	border-radius: 24px;
	height 100%
	cardOuterShade()
	overflow hidden

@media (max-width 1440px)
	.community-card
		max-width 300px
	.community-card_name
		line-height 1.4
@media (max-width 480px)
	.community-card
		width 100%
		margin 0 auto
	.community-wrap
		width 100%
	// .belarus
	// 	.community-card
	// 		display none

.community-card:hover
	transition all 1s
.community-card:hover .community-card_bg
	opacity 0.9
	transition all 1s

.community-card:hover .community-card_name
	color: c-f--on-content
	text-shadow: 0px 100px 106px rgba(0, 0, 0, 0.14), 0px 36.5016px 38.6917px rgba(0, 0, 0, 0.0965974), 0px 17.7209px 18.7841px rgba(0, 0, 0, 0.0778807), 0px 8.6871px 9.20833px rgba(0, 0, 0, 0.0621193), 0px 3.43489px 3.64099px rgba(0, 0, 0, 0.0434026);
	trans()
.community-card:hover .community-card_subs
	color: c-f--on-content
	text-shadow: 0px 100px 106px rgba(0, 0, 0, 0.14), 0px 36.5016px 38.6917px rgba(0, 0, 0, 0.0965974), 0px 17.7209px 18.7841px rgba(0, 0, 0, 0.0778807), 0px 8.6871px 9.20833px rgba(0, 0, 0, 0.0621193), 0px 3.43489px 3.64099px rgba(0, 0, 0, 0.0434026);
	trans()

.community-card_img
	width 208px
	margin 0 auto
	margin-bottom 17px
	z-index 2

.community-card_name
	position relative
	font-size f-regular
	font-weight 600
	text-align center
	z-index 1
	margin-bottom 4px
	padding 0 26px
	trans()

.community-card_subs
	position relative
	font-size f-regular
	text-align center
	z-index 1
	margin-bottom 21px
	margin unset 26px
	trans()
.community-card_inner
	justify-content center
	flex: 1 0 auto;
	z-index 2
.community-card_img
.community-card_name
.community-card_subs
	flex: 1 0 auto;


.community-card_btn
	flex-shrink: 0;
	position relative
	font-weight 600
	border none
	border-radius 24px
	padding 1.1rem 0
	trans()
	cardBtnShade()
	background-color c-surface
	z-index 1
	&:hover
		trans()
		buttonGrad()
		color c-f--on-content

.community-card_bg
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	trans()
	z-index 0
	opacity 0
	filter: blur(20px);
	background-size cover
	transform: scale(1.6)
	background-color #fff





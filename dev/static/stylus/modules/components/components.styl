.community-card-pop_wrap
	// display flex
	justify-content center
	background-color #fff
	align-items center
	display none
	position fixed
	z-index 1000
	top 0
	left 0
	width 100vw
	height 100vh
	// background: rgba(255, 255, 255, 0.2); // Make sure this color has an opacity of less than 1

	// backdrop-filter: blur(80px); // This be the blur


.community-card-pop
	position relative
	background-color #fff
	z-index 1001
	padding 45px 61px 64px
	border-radius 24px
	cardOuterShade()
	line-height 2

.community-card-pop_title
	text-align center
	font-size f-subtitle
	font-weight 900
	margin-bottom 40px
	line-height 1.2

.community-card-pop-content
	display flex
	justify-content space-between
	gap 32px
	margin-bottom s1

.commnity-card-pop-stats-column_head
	// margin-right s1
	max-width 117px
	display flex
	justify-content center
	align-items center
.commnity-card-pop-stats-column_logo
	max-width 75%
.commnity-card-pop-stats-column
	max-width 117px
.community-card-pop-stats
	display flex
	justify-content space-between
	margin-right 32px
	gap 26px
.community-card-pop-stats-head
	margin-right 26px

.commnity-card-pop-stats-column_head
.community-card-pop-stats-head_pic
	width 100%
	min-height 104px
	max-height 117px
	border-radius 24px
	margin-bottom 16px
.community-card-pop-stats-head-rows
	display flex
	flex-direction column
	align-items start
	text-align right
.community-card-pop-stats-head_row
	font-size f-regular
	width 80%

.commnity-card-pop-stats-column
	border-radius 24px
	padding-bottom 0.6rem
	color c-f--on-content
	margin-right 26px
.commnity-card-pop-stats-column--vk
	background-color c-vk--d
	.commnity-card-pop-stats-column_head
		vkGrad()
.commnity-card-pop-stats-column--tg
	background-color c-tg--d
	.commnity-card-pop-stats-column_head
		tgGrad()
.commnity-card-pop-stats-column--ig
	// background-color c-ig--d
	igGradDarken()

	.commnity-card-pop-stats-column_head
		igGrad()

.community-card-pop-stats-rows
	text-align center

.community-card-pop-descr
	max-width 402px

.community-card-pop-btns
	display flex
	justify-content center
	gap 28px
	button
		margin-right 26px




// =========
// Form
// =========

.section-form
	background-color c-surface
	cardOuterShade()
	display flex
	justify-content space-between
	align-items flex-end
	flex-wrap wrap
	border-radius 24px
	padding 60px

.section-form_title
	max-width 400px
	align-self center
.section-form-inputs
	width 491px

.section-form-buttons
	display flex
	justify-content space-between
	align-items flex-start

.gdpr
	padding-top 10px
	margin-left 40px
	max-width 286px
	font-size 12px
	line-height 1.2
	opacity 0.7
	color c-f-secondary
	aling-self flex-end
	a
		margin-left 5px
		trans()
		&:hover
			color c-prim
			trans()


// ===============
// Social-card
// ===============

.social-card
	position relative
	display flex
	flex-direction column
	width 23%
	padding 34px 32px
	border-radius: 24px;
	cardOuterShade()
	color c-f--on-content

.social-card_top
	display flex
	margin-bottom 31px
	justify-content space-around

.social-card-subs
	display flex
	flex-direction column
	justify-content center
.social-car-subs_count
	font-weight 900
	font-size 39px
	line-height 1

.social-card-stats
	cardShade()
	border-radius 26px
	padding-top 16px
	position relative
.social-card-stas-row
	display flex
	justify-content space-between
	padding 0 26px

.social-card_logo
	width 40%
.social-card-stats_item
	font-weight 600
.social-card--vk
	vkGrad()
	.social-card_btn
		color c-vk
		&:hover
			background-color c-vk--d
	.social-card-stats
		vkGradTop()

.social-card--ig
	igGrad()
	.social-card_btn
		color c-ig
		&:hover
			// background-color c-ig--d
			igGradDarken()
	.social-card-stats
		igGradTop()

.social-card--tg
	tgGrad()
	.social-card_btn
		color c-tg
		&:hover
			background-color c-tg--d
	.social-card-stats
		tgGradTop()

.social-card--yt
	ytGrad()
	.social-card_btn
		color c-yt
		&:hover
			background-color c-yt--d
	.social-card-stats
		ytGradTop()




.social-card_btn
	margin-top 10px
	width 100%
	position relative
	font-weight 600
	border none
	border-radius 24px
	padding 1.1rem 0
	trans()
	background-color c-surface
	// cardBtnShade()
	z-index 1
	&:hover
		trans()
		color c-f--on-content




// ===============
// Form no price
// ===============
.section-form-no-price
	width 100%
	justify-content space-around
	.section-form_title
		max-width 40%
		align-self flex-start

.section-form_title
	font-size 30px
	line-height 1.4
.no-price-btns
	// flex-direction column
	align-items stretch
	button
		margin-bottom 36px



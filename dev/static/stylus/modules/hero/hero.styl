.hero{
	background: url(../img/content/footer-socials.png);
	background-size: cover;
	width: 100vw;
	height: 100vh;
	background-position-y: -80px;
}
.first-grad
	padding-top: 100px;
	height 300px
	background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 100%), #182E46;
	background-blend-mode: overlay, normal;

.second-grad
	height 200px
	background: linear-gradient(180deg, #2F5988 0%, #C8E3F8 67.71%);

.heading-title
	text-align center
	color: #FFCCD1;
	font-size 60px
	position relative
	-webkit-text-stroke: 3.79661px solid #D90015;
	text-shadow: 0px -8.85876px 323.977px rgba(249, 4, 27, 0.74), 0px -3.70098px 135.35px rgba(249, 4, 27, 0.531952), 0px -1.97872px 72.3646px rgba(249, 4, 27, 0.441119), 0px -1.10925px 40.567px rgba(249, 4, 27, 0.37), 0px -0.589116px 21.5448px rgba(249, 4, 27, 0.298881), 0px -0.245145px 8.96529px rgba(249, 4, 27, 0.208048);
.heading-title:before
	content url(../img/content/heading-icon.png)
	position absolute
	top: -340px;
	left: -185px;
.hero-cta-callback
	opacity 0
.hero-cta-callback:hover
	font-weight: 900;
	font-size: 53px;
	line-height: 100%;
	/* or 53px */


	color: rgba(0, 0, 0, 0.01);

	text-shadow: 0px 100px 329px rgba(217, 54, 33, 0.8), 0px 46.233px 152.107px rgba(217, 54, 33, 0.7), 0px 26.4535px 87.032px rgba(217, 54, 33, 0.6), 0px 16.0571px 52.8278px rgba(217, 54, 33, 0.6), 0px 9.67509px 31.8311px rgba(217, 54, 33, 0.4), 0px 5.38772px 17.7256px rgba(217, 54, 33, 0.190342), 0px 2.31722px 7.62366px rgba(217, 54, 33, 0.131746);

.hero-call
	opacity 0
.hero-call:hover
	font-weight: 900;
	font-size: 53px;
	line-height: 100%;
	/* identical to box height, or 53px */

	letter-spacing: 0.075em;

	color: rgba(0, 0, 0, 0.01);

	text-shadow: 0px 27px 118px rgba(255, 169, 0, 0.46), 0px 11.28px 49.2976px rgba(255, 169, 0, 0.330673), 0px 6.0308px 26.3568px rgba(255, 169, 0, 0.274209), 0px 3.38082px 14.7754px rgba(255, 169, 0, 0.23), 0px 1.79553px 7.84712px rgba(255, 169, 0, 0.185791), 0px 0.747159px 3.26536px rgba(255, 169, 0, 0.129327);


@media (max-width 480px)
	.hero{
		height: 45vh
		background-position-x: -86px;
		background-position-y: 0;
	}
	.heading-title{
		line-height 1
	}

	.heading-title:before{
		transform: scale(0.5)
		top -240px
		font-size: 50px;
	}

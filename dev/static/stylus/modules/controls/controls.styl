.g-btn-prim
	text-align center
	buttonGrad()
	border-radius 24px
	color c-f--on-content
	font-size f-regular
	font-weight 600
	buttonShade()
	border none
	line-height 1.3
	padding 16px 40px
.g-btn-secondary
	display inline-block
	text-align center
	padding 16px 40px
	border-radius 24px
	line-height 1.3
	font-weight 600
	font-size f-regular
	color c-prim
	border 3px solid c-prim
	background transparent
	trans()
	&:hover
		background-color c-prim
		color c-f--on-content
		trans()
@media (max-width 1400px)
	.g-btn-secondary
	.g-btn-prim
		font-size 16px

.pop-close-btn
	position absolute
	top 1.5rem
	right 1.5rem
	border-radius 48%
	font-weight 600
	padding 0.25rem 0.5rem
	color c-f-secondary
	border none
	background none
	trans()
	&:hover
		primaryGrad()
		trans()
		color c-f--on-content

.g-form_input
	font-size f-regualr
	font-weight 600
	padding 8px 26px
	line-height 2
	border-radius 16px
	border 3px solid c-f-secondary
	margin-bottom 26px
.section-form_input
	width 100%
.g-form-name
	display none



.show-more-btn
	display none


@media (max-width 480px)
	.g-btn-prim
		width 100%
		margin-bottom 32px
	.g-btn-secondary
		width 100%
		margin-bottom 24px
	.gdpr
		text-align center
	.pop-close-btn
		right 0.8rem
		top 0.8rem


	.show-more-btn
		display block
		margin-bottom 62px


// slider
.slick-dots li button:before
	content '' !important

.slick-dots
	bottom -45px

@media (min-width 1800px)
	.slick-dots
		bottom 50px
.slick-dots li button
	background-color #fff !important
	width 50px !important
	height 8px !important
	border-radius 8px
	opacity 0.6

.slick-dots li.slick-active button
	opacity 1
.slick-dots li
	margin 0 30px !important

@media (max-width 480px)
	.slick-dots li button
		width 30px !important
	.slick-dots li
		margin 0 20px !important

	.addlink-btn
		max-width 100%


.pricing_dots
	display flex
	flex-wrap wrap
	justify-content center
	gap 20px
	align-items center
	position absolute
	top -10px
	right 0
	left 0
	z-index 100
	button
		background-color #c4c4c4
		color transparent
		font-size 1px
		content ''
		border none
		width 30px
.slick-active button
	background-color c-prim